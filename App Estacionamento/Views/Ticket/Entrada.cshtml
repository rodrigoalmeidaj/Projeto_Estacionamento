@model Ticket

@{
    ViewData["Title"] = "Entrada";
}

<br />
<div class="text-center">
    <h1>Entrada de veículo</h1>
</div>

<div class="col-md-6 offset-md-3">
    <form asp-action="BtnCheckIn">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row mt-4" hidden>
            <label asp-for="Id" class="col-sm-2 col-form-label h5"></label>
            <div class="col-sm-10">
                <input asp-for="Id" class="form-control rounded"/>
            </div>                
        </div>

        <div class="form-group row mt-4">
            <label asp-for="Cliente" class="col-sm-2 col-form-label h5">CLIENTE:</label>
            <div class="col-sm-10">
                <input asp-for="Cliente" class="form-control rounded" />
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>                
        </div>

        <div class="form-group row mt-4">
            <label asp-for="Placa" class="col-sm-2 col-form-label h5">PLACA:</label>
            <div class="col-sm-10">
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>                 
        </div>

        <div class="form-group row mt-4">
            <label asp-for="Veiculo" class="col-sm-2 col-form-label h5">VEÍCULO:</label>
            <div class="col-sm-10">
                <input asp-for="Veiculo" class="form-control" />
                <span asp-validation-for="Veiculo" class="text-danger"></span>
            </div>                 
        </div>

        <div class="form-group row mt-4">
            <label asp-for="Entrada" class="col-sm-2 col-form-label h5">ENTRADA:</label>
            <div class="col-sm-10">
                <input asp-for="Entrada" type="text" class="form-control entradamask" readonly/>
                <span asp-validation-for="Entrada" class="text-danger"></span>
            </div>                 
        </div>

        <div class="form-group d-flex justify-content-center mt-3">
            <a asp-action="Abertos" class="btn btn-danger m-3 mt-4">CANCELAR</a>
            <input type="submit" value=" CHECK-IN " class="btn btn-success m-3 mt-4" />                
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            $('.entradamask').mask('00/00/0000 00:00');
        });
    </script>
}
